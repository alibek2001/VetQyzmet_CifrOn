<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CheckData">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/сheckBackB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/white"
            android:minWidth="48dp"
            android:minHeight="48dp"
            app:srcCompat="@drawable/ic_hector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Завершение регистрации"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:fontFamily="@font/roboto500"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@color/cloud"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:layout_weight="1"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="Тип животного"
            android:textColor="@color/gray_text"
            android:textSize="14dp"
            android:fontFamily="@font/roboto400"/>

        <TextView
            android:id="@+id/checkType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="Корова"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:fontFamily="@font/roboto400"/>

        <TextView
            android:id="@+id/suitFront"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Направление животного"
            android:textColor="@color/gray_text"
            android:textSize="14dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkColor"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:text="Бело-коричневый"
            android:layout_marginTop="4dp"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/roboto400"
            />

        <TextView
            android:id="@+id/checkPorodaFront"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Порода"
            android:textColor="@color/gray_text"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/checkParoda"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="Беспородная"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:fontFamily="@font/roboto400"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="ИНЖ"
            android:textColor="@color/gray_text"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/checkInj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="945454512"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:fontFamily="@font/roboto400"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Пол"
            android:textColor="@color/gray_text"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/checkSex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="Самка"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:fontFamily="@font/roboto400"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Дата рождения"
            android:textColor="@color/gray_text"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/checkDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="Маруся"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:fontFamily="@font/roboto400"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/holderOfImages"
            android:layout_marginStart="17dp"
            android:layout_marginTop="32dp">

            <FrameLayout
                android:layout_width="90dp"
                android:id="@+id/imageHolder1"
                android:layout_height="90dp"
                android:layout_marginEnd="6dp">

                <FrameLayout
                    android:id="@+id/plus1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/plus_button_background"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_plus" />
                </FrameLayout>


                <ImageView
                    android:id="@+id/ima1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="bottom"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/delete_image1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|right"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_delete_image" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="90dp"
                android:id="@+id/imageHolder2"
                android:layout_height="90dp"
                android:layout_marginEnd="6dp">

                <FrameLayout
                    android:id="@+id/plus2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/plus_button_background"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_plus" />
                </FrameLayout>

                <ImageView
                    android:id="@+id/ima2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="bottom"
                    android:scaleType="centerCrop"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/delete_image2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|right"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_delete_image" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="90dp"
                android:id="@+id/imageHolder3"
                android:layout_height="90dp"
                android:layout_marginEnd="6dp">

                <FrameLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:visibility="gone"
                    android:id="@+id/plus3"
                    android:background="@drawable/plus_button_background"
                    android:layout_gravity="bottom"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_plus" />
                </FrameLayout>


                <ImageView
                    android:id="@+id/ima3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="bottom"
                    android:scaleType="centerCrop"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/delete_image3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|right"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_delete_image" />
            </FrameLayout>
        </LinearLayout>

</LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="0"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/restart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:background="@drawable/ic_white_button"
            android:stateListAnimator="@null"
            android:text="Заполнить заново"
            android:textAllCaps="false"
            android:textSize="14dp"
            android:fontFamily="@font/roboto500"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/finish"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="20dp"
            android:enabled="false"
            android:layout_weight="1"
            android:textSize="14dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/ic_for_edit_text"
            android:backgroundTint="@color/orange"
            android:paddingRight="12dp"
            android:text="Завершить"
            android:fontFamily="@font/roboto500"/>
    </LinearLayout>

</LinearLayout>