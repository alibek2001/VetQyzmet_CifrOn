<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14dp</item>
    </style>
    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textSize"> 14dp </item>
    </style>
    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textSize"> 14dp </item>
    </style>
    <style name="BoldText">
        <item name="android:fontWeight" tools:targetApi="o">500</item>
    </style>
    <style name="statusBarStyle" parent="@android:style/Theme.Holo.NoActionBar.Fullscreen">
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/white</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
    </style>
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle"> @style/BottomSheetStyle </item>
    </style>
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background"> @android:color/transparent </item>
    </style>
</resources>